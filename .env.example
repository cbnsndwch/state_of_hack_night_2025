# MongoDB Connection
# For MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=hello_miami

# Clerk Authentication
# Get these from your Clerk dashboard: https://dashboard.clerk.com
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key
CLERK_SECRET_KEY=sk_test_your-secret-key

# File Upload Service (Cloudinary recommended for image hosting)
# Sign up at https://cloudinary.com/ and get your cloud name, API key, and secret
# Used for project image uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Luma API (Required for authentication)
# Get your API key from Luma dashboard → Settings → Developer
# Used to verify that users are subscribed to the calendar
LUMA_API_KEY=your-luma-api-key

# App Admins (Calendar Administrators)
# Comma-separated list of email addresses for app admins.
# These users can always log in (even without Luma subscription) and have admin privileges.
APP_ADMIN_EMAILS=admin1@example.com,admin2@example.com

# Resend Email Service (Required for notifications)
# Get your API key from https://resend.com/api-keys
# Used to send demo slot confirmations and organizer notifications
RESEND_API_KEY=re_your_resend_api_key

# PostgreSQL Database
# For local development: postgresql://postgres:password@localhost:5433/hello_miami
# For production: Use your managed PostgreSQL provider (Neon, Supabase, AWS RDS, etc.)
DATABASE_URL=postgresql://postgres:password@localhost:5433/hello_miami

# Zero Sync Configuration
# For local development with Docker PostgreSQL
ZERO_UPSTREAM_DB=postgresql://postgres:password@localhost:5433/hello_miami
ZERO_QUERY_URL=http://localhost:5173/api/zero/query
ZERO_MUTATE_URL=http://localhost:5173/api/zero/mutate
ZERO_ADMIN_PASSWORD=dev-password
ZERO_QUERY_FORWARD_COOKIES=true
ZERO_MUTATE_FORWARD_COOKIES=true
VITE_ZERO_CACHE_URL=http://localhost:4848
